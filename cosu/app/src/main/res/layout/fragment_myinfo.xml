<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MyinfoFramgnet">

    <RelativeLayout
        android:id="@+id/mypageRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/mypagename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="마이페이지"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" />

        <Spinner
            android:id="@+id/mypagespinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="10dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_alignBottom="@id/mypagename"
            android:background="#5E5E5E" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/myprofileLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"

        app:layout_constraintTop_toBottomOf="@id/mypageRV">

        <ImageView
            android:id="@+id/myImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:paddingBottom="16dp"
            android:src="@drawable/chatroomimg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mypage_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="이름"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/chatContent"
            app:layout_constraintStart_toEndOf="@+id/chatImg"
            app:layout_constraintTop_toTopOf="@+id/chatImg"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/mypage_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="(레벨)"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/chatContent"
            app:layout_constraintStart_toEndOf="@+id/chatImg"
            app:layout_constraintTop_toTopOf="@+id/chatImg"
            app:layout_constraintVertical_bias="0.0" />


    </LinearLayout>

    <Button
        android:id="@+id/look_profilebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape"
        android:text="프로필 보기"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myprofileLL" />

    <TableLayout
        android:id="@+id/mypageTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/look_profilebtn">

        <TableRow
            android:layout_height="match_parent"
            android:layout_weight="match_parent"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_weight="wrap_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/mypost" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="내가 쓴 글"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"

                android:layout_weight="wrap_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/mylike" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="관심글"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_weight="wrap_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingright="20dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/mycomments" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="달린 댓글"
                    android:textSize="15dp" />
            </LinearLayout>
        </TableRow>

    </TableLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/mypageTV"
        android:background="#5E5E5E"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>